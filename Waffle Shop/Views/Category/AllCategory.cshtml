@model IEnumerable<Waffle_Shop.Models.Category>

@{
    ViewData["Title"] = "AllCategory";
}


<h1>AllCategory</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6" text-end>
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-folder-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br />
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) 
        {
            <tr>
                <td width="30%">
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td width="50%">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td width="30%">
                    <a asp-action="Edit" asp-route-id="@item.CategoryId"
                    class="btn btn-primary mx-2">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId"
                    class="btn btn-danger mx-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
