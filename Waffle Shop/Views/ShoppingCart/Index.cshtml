@model ShoppingCartViewModel<h2>Your shopping cart</h2><h4>Here are the delicious pies in your shopping cart.</h4><div class="container p-3">
    <div class="row pt-4">
        <div class="col-6" text-end>
            <a asp-controller="ShoppingCart" asp-action="ClearCart" class="btn btn-primary">
                <i class="bi bi-folder-plus"></i> &nbsp; Empty Cart
            </a>
        </div>
    </div>
    <br />
</div><table class="table table-bordered table-striped">    <thead>    <tr>        <th>Selected amount</th>        <th>Pie</th>        <th class="text-right">Price</th>        <th class="text-right">Subtotal</th>        <th class="text-right">Edit</th>    </tr>    </thead>    <tbody>    @foreach (var line in Model.ShoppingCart.ShoppingCartItems)    {        <tr>            <td class="text-center">@line.Amount</td>            <td class="text-left">@line.Pie.Name</td>            <td class="text-right">@line.Pie.Price.ToString("c")</td>            <td class="text-right">                @((line.Amount * line.Pie.Price).ToString("c"))            </td>            <td>                <a asp-controller = "ShoppingCart" asp-action="AddToShoppingCart" asp-route-pieId = "@line.Pie.PieId"
                class="btn btn-primary mx-2">Add</a> |
                <a asp-controller = "ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-pieId = "@line.Pie.PieId"
                class="btn btn-danger mx-2">Delete</a>
            </td>        </tr>    }    </tbody>    <tfoot>    <tr>        <td colspan="3" class="text-right">Total:</td>        <td class="text-right">            @Model.ShoppingCartTotal.ToString("c")        </td>        <td>    </tr>    </tfoot></table>
