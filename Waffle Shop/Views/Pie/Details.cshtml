@model Waffle_Shop.Models.Pie<h4 class="center display-6">@Model.ShortDescription</h4><div class="thumbnail">    <img alt="@Model.Name" src="@Model.ImageUrl" width="900" hight="900" class="center sstyle">    <div class="caption-full paddingg">        <h3 class="pull-right">Rs.@Model.Price</h3>        <h3>            <p class="display-5">@Model.Name</p>        </h3>        <p>@Model.LongDescription</p>         <div class="addToCart">            <p class="button">                <a class="btn buttonn btn-danger" asp-controller="Pie" asp-action="Detail" asp-route-pieId="@Model.PieId">Add to cart</a>            </p>        </div>    </div></div>
